<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_rl"
    tools:context="com.teambisu.mobilecomputingandsendingofgrades.ListSubjectActivity">

    <TextView
        android:id="@+id/tv_subject_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ThemeBackground"
        android:padding="10dp"
        android:text="Your Handled Subjects" />

    <ListView
        android:id="@+id/lv_subjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_subject_title">

    </ListView>

    <RelativeLayout
        android:id="@+id/rl_floatingbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_toLeftOf="@+id/btn_edit"
            app:backgroundTint="#fff"
            app:srcCompat="@android:drawable/ic_input_add" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_toLeftOf="@+id/btn_delete"
            app:backgroundTint="#fff"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="#fff"
            app:srcCompat="@android:drawable/ic_delete" />
    </RelativeLayout>
</RelativeLayout>
